<h3>ClassScheduler</h3>

@page "/ClassData"
@using Data
@using System.Globalization

<h3>ClassScheduler</h3>


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th></th>
                    @for (int i = 0; i < 7; i++)
                    {
                        DateTime date = DateTime.Today.AddDays(i - (int)DateTime.Today.DayOfWeek);
                        <th>@date.ToString("ddd MM/dd/yyyy")</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var hour in Enumerable.Range(0, 24))
                {
                    <tr>
                        <td>@hour:00</td>
                        @for (int i = 0; i < 7; i++)
                        {
                            DateTime date = DateTime.Today.AddDays(i - (int)DateTime.Today.DayOfWeek);
                            var cellDate = new DateTime(date.Year, date.Month, date.Day, hour, 0, 0);
                            <td>@cellDate.ToString("hh:mm tt")</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>